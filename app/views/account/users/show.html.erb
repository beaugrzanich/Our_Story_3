<%= render 'account/shared/page' do |p| %>
<% p.content_for :body do %>
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <h2>
                    <%= @user.first_name %>
                    <%= @user.last_name %>
                </h2>
            </section>
        </aside>
        <div class="col-md-8">
            <% if @user.microposts.any? %>
                <h3>Microposts (<%= @user.microposts.count %>)</h3>
                <ol class="microposts">
                    <%= render @microposts %> 
                </ol>
                <%= will_paginate @microposts %> 
            <% end %>
        </div>
    </div>
<% end %>
<% end %>
  
